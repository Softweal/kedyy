{
    "manifest_version": 3,
    "name": "kedyy",
    "version": "1.0.0",
    "description": "A professional cross-browser extension template.",
    "action": {
        "default_popup": "src/pages/popup.html",
        "default_title": "Open Extension"
    },
    "background": {
        "scripts": [
            "src/scripts/background.js"
        ]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "extension-template@example.com",
            "strict_min_version": "109.0"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "src/libs/lottie.min.js",
                "src/scripts/content.js"
            ],
            "css": [
                "src/styles/content.css"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/assets/kedy.json"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ],
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "*://*/*"
    ]
}