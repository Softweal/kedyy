{
    "manifest_version": 3,
    "name": "kedyy",
    "version": "1.0.4",
    "author": "Emre Kay覺k",
    "description": "kedyy taray覺c覺n覺zdaki kediniz. hayat'a ithafen.",
    "action": {
        "default_popup": "src/pages/popup.html",
        "default_title": "kedyy",
        "default_icon": "src/assets/icon.png"
    },
    "icons": {
        "16": "src/assets/icon.png",
        "48": "src/assets/icon.png",
        "128": "src/assets/icon.png"
    },
    "chrome_url_overrides": {
        "newtab": "src/pages/newtab.html"
    },
    "background": {
        "service_worker": "src/scripts/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/libs/lottie.min.js",
                "src/scripts/content.js"
            ],
            "css": [
                "src/styles/content.css"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/assets/kedy.json",
                "src/assets/kedy2.json",
                "src/assets/kedy3.json",
                "src/assets/kedy4.json"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}